<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block page_title %}IdeaLoom{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale = 1,user-scalable=no,maximum-scale=1.0">

    {% block meta_tags %}
    <meta name="description" content="">
    <meta property="og:title" content="IdeaLoom" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ application_url }}" />
    <meta property="og:image" content="{{ STATIC_URL }}/css/themes/default/img/crowd2.jpg" />
    <meta property="og:image:width" content="1600" />
    <meta property="og:image:height" content="222" />
    <meta property="og:image" content="{{ STATIC_URL }}/css/themes/default/img/logo.png" />
    <meta property="og:image:width" content="111" />
    <meta property="og:image:height" content="35" />
    <meta name="robots" content="noindex" />
    <meta name="googlebot" content="noindex" />
    {% endblock meta_tags %}

    {% block favicons %}
    <!-- generics -->
    <link rel="icon" href="/static/img/favicon/favicon-32.png" sizes="32x32">
    <link rel="icon" href="/static/img/favicon/favicon-57.png" sizes="57x57">
    <link rel="icon" href="/static/img/favicon/favicon-76.png" sizes="76x76">
    <link rel="icon" href="/static/img/favicon/favicon-96.png" sizes="96x96">
    <link rel="icon" href="/static/img/favicon/favicon-128.png" sizes="128x128">
    <link rel="icon" href="/static/img/favicon/favicon-192.png" sizes="192x192">
    <link rel="icon" href="/static/img/favicon/favicon-228.png" sizes="228x228">

    <!-- Android -->
    <link rel="shortcut icon" sizes="196x196" href="static/img/favicon/favicon-196.png">

    <!-- iOS -->
    <link rel="apple-touch-icon" href="/static/img/favicon/favicon-120.png" sizes="120x120">
    <link rel="apple-touch-icon" href="/static/img/favicon/favicon-152.png" sizes="152x152">
    <link rel="apple-touch-icon" href="/static/img/favicon/favicon-180.png" sizes="180x180">

    <!-- Windows 8 IE 10-->
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="/static/img/favicon/favicon-144.png">

    <!— Windows 8.1 + IE11 and above —>
    <meta name="msapplication-config" content="/static/img/favicon/browserconfig.xml" />
    {% endblock favicons %}

    {#<link rel="icon" href="{{ STATIC_URL }}/img/icon/infinite-1.png" type="image/x-icon">#}
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- link type="text/css" rel="stylesheet" href="{{ STATIC_URL }}/js/build/theme_{{theme_relative_path}}_web.css" / -->
    {{css_links|safe}}

    <link type="text/css" rel="stylesheet" href="{{ STATIC_URL }}/js/build/hopscotch/css/hopscotch.min.css" />

    {% block extra_css %}{% endblock extra_css %}
    {% include 'includes/feature_detection.jinja2' %}

</head>
<body class="preload {{theme_name}}">
    <div id="wrapper">
        <header id="header">{# include with marionette region #}</header>
        <div id="infobars"></div>
        <main id="main"> {% block content %}{% endblock %} </main>
    </div>
    {% block backboneTemplates %}{% endblock %}

    <div id="slider"></div>
    <div id="tooltips"></div>
    <div id="popover-oembed" class="hidden"></div>
    <div id="flash-error" class="hidden">{{ error|safe }}</div>
    <div id="flash-message" class="hidden">{{ message|safe }}</div>

    {% include 'includes/javascript.jinja2' %}
    {% include 'includes/updatebrowser.jinja2' %}
    
    <script type="text/javascript">idealoom_version = '{{ version }}';</script>

    {% block extra_js %}{% endblock %}
    {% block main_js %}{% endblock %}

    {% block facebook_sdk_load%}{% endblock %}

</body>
</html>
